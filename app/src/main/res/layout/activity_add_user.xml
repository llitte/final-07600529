<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <TextView
        android:id="@+id/add_title"
        android:layout_width="247dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="ADD RECORDS"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <EditText
        android:id="@+id/ditstance_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Enter distance(meters)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/add_title"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/add_title"
        app:layout_constraintTop_toBottomOf="@+id/add_title" />

    <EditText
        android:id="@+id/duration_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter duration(seconds)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/add_title"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/add_title"
        app:layout_constraintTop_toBottomOf="@+id/ditstance_edit_text" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:layout_marginTop="72dp"
        android:text="SAVE"
        app:layout_constraintEnd_toEndOf="@+id/duration_edit_text"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/duration_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/duration_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>